@model IEnumerable<InventoryApp.Models.Item>



@{ if (!Model.Any())
  {
    <p>The inventory list is currently empty</p>
  }
  else
  {
    <table class="table">
      <tr>
        <th>
          @Html.DisplayNameFor(m => m.Name)
        </th>
        <th>
          @Html.DisplayNameFor(m => m.Amount)
        </th>
        <th>
          @Html.DisplayNameFor(m => m.DateAdded)
        </th>
      </tr>

      @foreach (var item in Model)
      {
        <tr>
          <td>
            @Html.ActionLink(item.Name, "Edit", "Items")
          </td>

          <td>
            @item.Amount
          </td>

          <td>
            @item.DateAdded
          </td>
        </tr>
      }
    </table>
  }

}


